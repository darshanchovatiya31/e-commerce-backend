    "/upload/image": {
      "post": {
        "summary": "Upload a single image",
        "tags": ["Upload"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": { "type": "string", "format": "binary" }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Image uploaded" },
          "400": { "description": "No file uploaded" },
          "403": { "description": "Admin access required" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/upload/images": {
      "post": {
        "summary": "Upload multiple images",
        "tags": ["Upload"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "images": { "type": "array", "items": { "type": "string", "format": "binary" } }
                },
                "required": ["images"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Images uploaded" },
          "400": { "description": "No files uploaded" },
          "403": { "description": "Admin access required" },
          "500": { "description": "Server error" }
        }
      }
    }
  },
  "securitySchemes": {
    "bearerAuth": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  }
}